<div class="container my-4">
  <div class="row">
    <div class="col-md-8">
      <div class="card mb-4">
        <div class="card-body">
          <h1 class="card-title"><%= @pet.name %></h1>
          <p class="card-text"><strong>Type:</strong> <%= @pet.animal_type %></p>
          <p class="card-text"><strong>Breed:</strong> <%= @pet.breed %></p>
          <p class="card-text"><strong>Age:</strong> <%= @pet.age %></p>
          <p class="card-text"><strong>Size:</strong> <%= @pet.size %></p>
          <p class="card-text"><strong>Gender:</strong> <%= @pet.gender %></p>
          <p class="card-text"><strong>Status:</strong> <%= @pet.status %></p>
          <p class="card-text"><strong>Shelter:</strong> <%= link_to @shelter.name, shelter_path(@shelter) %></p>
        </div>
      </div>
      <div class="card mb-4">
        <div class="card-body">
          <h2 class="card-title">Tags</h2>
          <% @tags.each do |tag| %>
            <%= link_to tag_path(tag), class: "btn btn-primary rounded-pill px-3 mb-2" do %>
              <%= tag.name %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-body">
          <h2 class="card-title">Photo</h2>
          <% if @pet.photo_urls.present? %>
            <% @pet.photo_urls.split(', ').each do |photo_url| %>
              <img src="<%= photo_url %>" class="img-fluid mb-2" alt="<%= @pet.name %>">
            <% end %>
          <% else %>
            <p class="card-text">No photo available</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
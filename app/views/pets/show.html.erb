<h1><%= @pet.name %></h1>
<p>Type: <%= @pet.animal_type %></p>
<p>Breed: <%= @pet.breed %></p>
<p>Age: <%= @pet.age %></p>
<p>Size: <%= @pet.size %></p>
<p>Gender: <%= @pet.gender %></p>
<p>Status: <%= @pet.status %></p>
<p>Shelter: <%= link_to @shelter.name, shelter_path(@shelter) %></p>

<h2>Tags</h2>
<ul>
  <% @tags.each do |tag| %>
    <li><%= link_to tag.name, tag_path(tag) %></li>
  <% end %>
</ul>